
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>ContactUs</h2>

<form style="width: 40%; display: inline-block; text-align: left;" onsubmit="return validateContactForm()">
    <div class="form-group">
        <input type="text" name="fname" placeholder="First name" id="FirstName" class="form-control" onfocusout="validateFname(this)">
        <span id="error-fname" class="error-msg"></span>
    </div>
    <div class="form-group">
        <input type="text" name="lname" placeholder="Last name" id="LastName" class="form-control"  onfocusout="validateLname(this)">
        <span id="error-lname" class="error-msg"></span>
    </div>
    <div class="form-group">
        <input type="number" name="phone" id="PhoneNumber" placeholder="Phone number" class="form-control"  onfocusout="validatePhone(this)">
        <span id="error-phone" class="error-msg"></span>
    </div>
    <div class="form-group">
        <input type="text" name="email" placeholder="Email address" id="Email" class="form-control"  onfocusout="validateEmail(this)">
        <span id="error-email" class="error-msg"></span>
    </div>
    <div class="form-group">
        <label for="message" >Message</label><br>
        <textarea id="message" rows="10"  class="form-control"  onfocusout="validateMessage(this)">
    
                        </textarea>
        <span id="error-message" class="error-msg"></span>
    </div>
    <center><input type="submit"  class="btn btn-primary"></center>
</form>
<script src="~/Scripts/MyScripts/script.js"></script>