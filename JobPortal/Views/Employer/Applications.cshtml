@model IEnumerable<JobPortal.Models.JobApplication>

@{
    ViewBag.Title = "Applications";
    Layout = "~/Views/Shared/EmployerLayout.cshtml";
}

<h2>Applications</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SeekerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SeekerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Approve", "ApplicationApprove", new { id=item.JobApplicationID }) |
            @Html.ActionLink("Reject", "ApplicationReject", new { id=item.JobApplicationID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.JobApplicationID })
        </td>
    </tr>
}

</table>
