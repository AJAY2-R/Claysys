<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/icon.png" type="image/x-icon">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/MyCss/site.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <navbar>
        <div class="cus-navbar-logo">
            <img src="~/Content/Static/claysys-logo.png">
        </div>
        <div class="cus-navbar">
            <div class="cus-dropdown">
                <button class="cus-dropbtn">Jobs</button>
                <div class="cus-dropdown-content">
                    <a href="@Url.Action("DisplayVacancy","Home")">Jobs</a>
                    <a href="#service2">Service 2</a>
                    <a href="#service3">Service 3</a>
                </div>
            </div>

            <a href="@Url.Action("JobSeekerLogin","Home")" class="btn-login">Login</a>

            <a href="@Url.Action("JobSeekerRegister", "Home")" class="btn-register">Register</a>
            <div class="cus-dropdown">
                <button class="cus-dropbtn">For Employers </button>
                <div class="cus-dropdown-content">
                    <a href="@Url.Action("EmployerLogin","Home")">Login</a>
                    <a href="@Url.Action("EmployerRegister","Home")">Register</a>
                </div>
            </div>
            <div class="cus-dropdown "><p href="#" style="margin-top:30px">|</p></div>
            <a href="@Url.Action("About","Home")">About us</a>
            <a href="@Url.Action("ContactUs","Home")">Contact us</a>
        </div>
       
    </navbar>

    @{
        string message = TempData["Message"] as string;
        if (!String.IsNullOrEmpty(message))
        {
            <script>alert('@message') </script>
        }
    }

    <div class="container body-content">
        @RenderBody()
    </div>


    <footer class="row row-cols-5 py-5 my-5 border-top">
        <div class="col">
            <a href="/" class="d-flex align-items-center mb-3 link-dark text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><img src="~/Content/Static/claysys-logo.png"></svg>

            </a>
            <p class="bi me-2">Connect with us</p>
        </div>
        <div class="col">

        </div>
        <div class="col">
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">About us</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Careers</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Site map</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">FAQs</a></li>
            </ul>
        </div>
        <div class="col">
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Help center</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Reposrt issue</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Privacy & Policy</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Fraud alert</a></li>
            </ul>
        </div>
    </footer>
    <div class="copy-right" align="center">
        &copy; @DateTime.Now.Year Claysys technologies
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>